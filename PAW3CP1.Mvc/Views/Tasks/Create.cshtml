@model PAW3CP1.Models.DTO.TaskDTO

@* Diseño con IA, prompt: tome de referencia el layout para hacer la vista.*@
@{
    ViewData["Title"] = "Crear Tarea";
}

<style>
    /* CONTENEDOR PRINCIPAL */
    .create-container {
        background: #ffffffee;
        border-radius: 1rem;
        padding: 2.5rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        max-width: 700px;
        margin: 2rem auto;
    }

        /* TÍTULO */
        .create-container h1 {
            font-weight: 700;
            color: #007bff;
            margin-bottom: 0.5rem;
        }

        .create-container h4 {
            color: #6c757d;
            font-weight: 500;
            margin-bottom: 1.5rem;
        }

    hr {
        border: none;
        border-top: 2px solid #e3e3e3;
        margin-bottom: 1.5rem;
    }

    /* FORMULARIO */
    .form-group {
        margin-bottom: 1.2rem;
    }

        .form-group label {
            font-weight: 600;
            color: #333;
        }

    .form-control {
        border-radius: 0.5rem;
        border: 1px solid #ccc;
        padding: 0.6rem 0.9rem;
        font-size: 1rem;
        transition: all 0.2s ease-in-out;
    }

        .form-control:focus {
            border-color: #74b9ff;
            box-shadow: 0 0 6px rgba(116, 185, 255, 0.5);
            outline: none;
        }

    .text-danger {
        font-size: 0.9rem;
    }

    /* BOTÓN SUBMIT */
    .btn-create {
        display: inline-block;
        background: linear-gradient(135deg, #74b9ff, #a29bfe);
        color: white;
        border: none;
        border-radius: 0.5rem;
        padding: 0.7rem 1.5rem;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.2s ease-in-out;
        margin-top: 0.5rem;
    }

        .btn-create:hover {
            background: linear-gradient(135deg, #6c5ce7, #0984e3);
            box-shadow: 0 4px 10px rgba(0,0,0,0.15);
            transform: translateY(-2px);
        }

    /* ENLACE VOLVER */
    .back-link {
        display: inline-block;
        margin-top: 1.5rem;
        color: #007bff;
        font-weight: 500;
        text-decoration: none;
        transition: color 0.2s;
    }

        .back-link:hover {
            color: #6c5ce7;
            text-decoration: underline;
        }

    /* RESPONSIVE */
    @@media (max-width: 576px) {
        .create-container

    {
        padding: 1.5rem;
    }

    }
</style>

<div class="create-container">
    <h1>Crear Nueva Tarea</h1>
    <h4>Complete los siguientes campos</h4>
    <hr />

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Ingrese el nombre de la tarea" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" placeholder="Ingrese una descripción" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-create">Guardar Tarea</button>
    </form>

    <a asp-action="Index" class="back-link">← Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
