@{
    Layout = "~/Views/Shared/AuthLayout.cshtml";
    ViewData["Title"] = "Login";
    // diseño se hace con IA
}

<h3 class="auth-title">Iniciar sesión</h3>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger text-center">@ViewBag.Error</div>
}

@using (Html.BeginForm("TryLogin", "Login", FormMethod.Post))
{
    <div class="mb-3">
        <label class="form-label fw-semibold">Correo electrónico</label>
        @Html.TextBox("email", null, new {
        @class = "form-control rounded-3 p-2",
        type = "email",
        required = "required",
        placeholder = "Ingrese su correo"
        })
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Contraseña</label>
            @Html.Password("password", null, new {
            @class = "form-control rounded-3 p-2",
            required = "required",
            placeholder = "Ingrese su contraseña"
            })
    </div>

    <div class="d-grid mt-4">
        <input type="submit" value="Iniciar sesión" class="btn btn-primary rounded-3 py-2 fw-semibold" />
    </div>

    <div class="text-center mt-3">
        @Html.ActionLink("¿No tienes cuenta? Regístrate aquí", "Login", "Login", null, new { @class = "text-decoration-none text-secondary fw-semibold" })
    </div>
}
