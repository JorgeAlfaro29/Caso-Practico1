@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<h2 class="text-center">Login</h2>


@if (ViewBag.Error != null)
{
    <div class="alert alert-danger text-center">@ViewBag.Error</div>
}

@using (Html.BeginForm("TryLogin", "Login", FormMethod.Post))
{
    <div class="form-group">
        <label for="Email">Correo electrónico</label>
        @Html.TextBox("email", null, new {
        @class = "form-control",
        type = "email",
        required = "required",
        placeholder = "Ingrese su correo"
        })
    </div>

    <div class="form-group mt-3">
        <label for="Password">Contraseña</label>
        @Html.Password("password", null, new {
        @class = "form-control",
        required = "required",
        placeholder = "Ingrese su contraseña"
        })
    </div>

    <div class="mt-4 text-center">
        <input type="submit" value="Iniciar sesión" class="btn btn-primary" />
    </div>

    <div class="text-center mt-3">
        @Html.ActionLink("¿No tienes cuenta? Regístrate aquí", "Register", "Account", null, new { @class = "text-decoration-none" })
    </div>
}
