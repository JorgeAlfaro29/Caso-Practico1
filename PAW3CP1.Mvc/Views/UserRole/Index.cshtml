@using PAW3CP1.Models.DTO
@model List<UserRoleViewDTO>

<h2 class="mb-4">Asignar Roles a Usuarios</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}


<table class="table table-bordered table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th>Email</th>
            <th>Rol actual</th>
            <th>Asignar nuevo rol</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.CurrentRoleName</td>
                <td>
                    <!-- 🔹 Formulario dentro de la celda -->
                    <form asp-action="SaveRole" method="post" class="d-flex gap-2">
                        <input type="hidden" name="userId" value="@user.UserId" />
                        
                        <select name="roleId" class="form-select" style="width: auto;">
                            @foreach (var role in user.AvailableRoles)
                            {
                                @:<option value="@role.RoleId" @(role.RoleId == user.CurrentRoleId ? "selected" : "")>@role.RoleName</option>
                            }
                        </select>

                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


