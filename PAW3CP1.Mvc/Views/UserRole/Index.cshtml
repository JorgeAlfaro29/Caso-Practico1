@using PAW3CP1.Models.DTO
@model List<UserRoleDTO>

<h2 class="mb-4">Asignar Roles a Usuarios</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-bordered table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th>Email</th>
            <th>Rol actual</th>
            <th>Asignar nuevo rol</th>
        </tr>
    </thead>
    <tbody>
        @* Asegúrate de que Model no sea null *@
        @if (Model != null && Model.Any())
        {
            // ViewBag.Roles debe contener List<RoleDTO>
            var availableRoles = ViewBag.Roles as List<RoleDTO> ?? new List<RoleDTO>();

            foreach (var userRole in Model)
            {
                <tr>
                    <td>
                        @(userRole?.User?.Email ?? "— sin email —")
                    </td>
                    <td>
                        @(userRole?.Role?.RoleName ?? "— sin rol —")
                    </td>
                    <td>
                        <form asp-action="SaveRole" method="post" class="d-flex gap-2 align-items-center">
                            <input type="hidden" name="userId" value="@(userRole?.UserId ?? 0)" />

                            <select name="roleId" class="form-select" style="width: auto;">
                                @foreach (var role in availableRoles)
                                {
                                    // Comparar con userRole.RoleId (id del rol actual en ese userRole)
                                    var selected = (role.RoleId == (userRole?.RoleId ?? 0)) ? "selected" : null;
                                    <option value="@role.RoleId">
                                        @role.RoleName
                                    </option>
                                }
                            </select>

                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">No hay usuarios para mostrar.</td>
            </tr>
        }
    </tbody>
</table>
